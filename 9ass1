#include <stdio.h>

int main()
{
    int a[4];
    int *p=a;
    int i;
    int x;
    int sum=0;
    printf("\n enter 4array elements ");
    for (i=0;i<4;i++)
    scanf("%d",&a[i]);
    p=a;
    for(i=0;i<4;i++)
    {
        sum=sum+*(p+i);
        p++;
    }
    printf("\n the sum is: %d",sum);

    return 0;
}
